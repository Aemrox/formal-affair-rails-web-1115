<!-- Your form goes here! -->
<%= form_for(@baby) do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :weight %>
  <%= f.text_field :weight %>
  <%= f.label :birth_date %>
  <%= f.text_field :birth_date %>

  <% if !@baby.weight %>
    <%= submit_tag "Create Baby" %>
  <%else%>
    <%= submit_tag "Update Baby" %>
  <%end%>
<% end %>
